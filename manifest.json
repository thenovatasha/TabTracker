{
  "manifest_version": 3,
  "name": "ShowTime",
  "version": "1.0.0",
  "description": "Take full control of your browsing time with ShowTime. Gain valuable insights and optimize your browsing habits.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_title": "ShowTime"
  },
  "side_panel": {
    "type": "module",
    "default_path": "src/html/sidepanel.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "sidePanel",
    "idle"
  ],
  "background": {
    "type": "module",
    "service_worker": "src/service_worker.js"
  }
}